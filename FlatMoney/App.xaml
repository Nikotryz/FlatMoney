<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="FlatMoney.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FlatMoney"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="appColors" Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary x:Name="appStyles" Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary x:Name="appCustomStyles" Source="Resources/Styles/CustomStyles.xaml" />

                <material:StyleResource BasedOn="{x:Reference appStyles}" ColorsOverride="{x:Reference appColors}" />
                <material:StyleResource BasedOn="{x:Reference appCustomStyles}" ColorsOverride="{x:Reference appColors}" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>

