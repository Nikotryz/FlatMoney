<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FlatMoney.Views.General.FlatPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{StaticResource BackGround}">

    <Grid RowDefinitions="60,*">
        <Grid Grid.Row="0" ColumnDefinitions="1.8*,*">
            <Label Grid.Column="0" Text="12 квартир" Style="{StaticResource FlatCounter}"/>
            <Button Grid.Column="1" Style="{StaticResource BlueButton}" Clicked="AddButton"/>
            <Image Grid.Column="1" Source="add.png" Style="{StaticResource Add}"/>
        </Grid>
        <CollectionView Grid.Row="1" ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame HeightRequest="90" Margin="10,5" BackgroundColor="{StaticResource Field}" Padding="0">
                        <Grid ColumnDefinitions="*,3.5*">
                            <Image Grid.Column="0" Source="flat_item.png" Style="{StaticResource FlatItem}"/>
                            <BoxView Grid.Column="0" Style="{StaticResource VerticalDivider}"/>
                            <Grid Grid.Column="1" RowDefinitions="2*,*,*">
                                <Label Text="{Binding Name}" Style="{StaticResource FlatItemText}"/>
                                <Label Text="{Binding Rent}" Style="{StaticResource Standart}"/>
                                <Label Text="{Binding Internet}" Style="{StaticResource Standart}"/>
                            </Grid>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>